check-def-pwd () {
	if grep "gBHEMrckbK9dpFJ0xrrO07TecyKNgTeB2Q69PKwFuuZC47W0k7zdWyF115efj9c5UmpxjB" "/etc/shadow" > /dev/null; then
		echo -n -e "Please change the default password!"
		exit 1
	fi
}

case "$1" in
	check-def-pwd)
		check-def-pwd
		;;
	*)
		echo -n -e "The parameter is incorrect."
		exit 1
		;;
esac

exit 0
