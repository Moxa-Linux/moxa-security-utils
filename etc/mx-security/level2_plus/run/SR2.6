. /etc/mx-security/mxsec_functions

check-guard-monitor () {
	if ! ps aux | grep mx-guard | grep -v "grep" > /dev/null; then
		echo -n -e "Couldn't detect mx-guard daemon."
	fi
}

case "$1" in
	install)
		install
		;;
	check-guard-monitor)
		check-guard-monitor
		;;
	*)
		echo -n -e "The parameter is incorrect."
		exit 1
		;;
esac

exit 0

